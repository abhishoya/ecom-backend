<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty name="name" source="spring.application.name" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                {"level":"%level","class":"%logger{36}","thread":"%thread","message": "%message","service": "${name}","traceId":"%X{traceId}", "spanId":"%X{spanId}"}%nopex%n
            </pattern>
        </encoder>
    </appender>

    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <!-- (1) -->
        <http>
            <url>${GRAFANA_LOKI_ENDPOINT}</url>
            <auth>
                <username>${GRAFANA_USER}</username>
                <password>${GRAFANA_PASSWORD}</password>
            </auth>
        </http>
        <format>
            <!-- (2) -->
            <label>
                <pattern>app=${name},host=${HOSTNAME},level=%level</pattern>
                <!-- (3) -->
                <readMarkers>true</readMarkers>
            </label>
            <message>
                <!-- (4) -->
                <pattern>
                    {
                    "level":"%level",
                    "class":"%logger{36}",
                    "thread":"%thread",
                    "message": "%message",
                    "requestId": "%X{X-Request-ID}"
                    }
                </pattern>
            </message>
        </format>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />

    </root>

</configuration>